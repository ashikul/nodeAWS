doctype html
html(ng-app='Scotty')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(charset='utf-8')
    title Scotty
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Scotty')
    meta(name='keywords', content='Scotty')
    meta(name='author', content='Scotty')
    meta(name='msapplication-TileColor', content='#00a8ff')
    meta(name='msapplication-config', content='assets/img/favicons/browserconfig.xml')
    meta(name='theme-color', content='#ffffff')
    link(rel='stylesheet', href='/stylesheets/app.full.min.css')
    script.
      window.getExternalIceServers = true;
    script(src='https://rtcmulticonnection.herokuapp.com/dist/RTCMultiConnection.min.js')
    script(src='https://rtcmulticonnection.herokuapp.com/socket.io/socket.io.js')
    script(src='https://cdn.webrtc-experiment.com/getMediaElement.js')
    script(src='https://cdn.webrtc-experiment.com:443/FileBufferReader.js')
    script(src='https://s3.amazonaws.com/cdn.hellosign.com/public/js/hellosign-embedded.LATEST.min.js')
  body
    .experiment
      h4(style='text-align: center') Notary Appointment Session
      .make-center
        input#room-id(type='text', value='Room Name')
        button#open-room Open Room
        button#join-room Join Room
        button#open-or-join-room Auto Open Or Join Room
        br
        br
        input#input-text-chat(type='text', placeholder='Enter Text Chat', disabled='')
        button#share-file(disabled='') Share File
        br
        br
        button#btn-leave-room(disabled='') Leave /or close the room
        #room-urls(style='text-align: center;display: none;background: #F1EDED;margin: 15px -10px;border: 1px solid rgb(189, 189, 189);border-left: 0;border-right: 0')
      #chat-container
        #file-container
        .chat-output
      #videos-container
    div(ui-view='')
    script(src='/stylesheets/app.full.min.js')
